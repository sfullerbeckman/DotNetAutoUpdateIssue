<Page
    x:Class="HostApp.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HostApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:part="clr-namespace:TinyPart;assembly=TinyPart"
    Title="Page2"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            FontSize="20"
            FontWeight="Bold"
            Text="Page 2 (instantiates control from TinyPart.dll)" />
        <Border
            Grid.Row="1"
            Margin="0,12,0,0"
            Padding="12"
            BorderBrush="#AAA"
            BorderThickness="1">
            <!--  This triggers loading TinyPart.dll only when Page2 is created  -->
            <part:TinyControl />
        </Border>
    </Grid>
</Page>
