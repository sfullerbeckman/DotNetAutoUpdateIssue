<Page
    x:Class="HostApp.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HostApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="24">
        <StackPanel>
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="Page 1 (Pre-update)" />
            <TextBlock Margin="0,8,0,12" Text="Leave this page open. Apply the '.NET [version] Update for x64 Client' update. Then click 'Go to Page 2'." />
            <Button
                Width="140"
                Click="OnGo"
                Content="Go to Page 2" />
        </StackPanel>
    </Grid>
</Page>
